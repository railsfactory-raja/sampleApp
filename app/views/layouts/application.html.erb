<!DOCTYPE html>
<html>
<head>
  <title>Google Plus</title>
  <%= stylesheet_link_tag :all %>

  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js", "application" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
        <h1>Sample Apps in ROR</h1>
				<div style="width:980px;margin:0 auto; height:50px; color:#fff;">
				<div class="menu_bar ">
				 <% if user_signed_in?   %>
				 	<ul>
							<li >
							<%= link_to  "Home",  "/" %>  
							</li>
							<li >
							<%= link_to  "Articles",  "/articles/" %>  
							</li>
							<li >
							<%= link_to  "Logout", destroy_user_session_path, :method => :delete %>
							</li>
				</ul>
     
				<% else %>
				<ul>
						<li >
							<%= link_to  "Home",  "/" %>  
							</li>
							<li >
							<%= link_to  "Sign up", new_user_registration_path %>  
							</li>
							<li >
							<%= link_to "Sing in", new_user_session_path %>
							</li>
				</ul>
	
				  <% end %>
					 </div>
					</div>

    </div>
<div id="mainwarpper">

    <div class="notice">
			<p><%= notice %></p>
		</div>
  
     <div id="content">
    
         <div class="alert"><p ><%= alert %></p></div>
    
        <%= yield %>
      
    </div>
    <div id="footer">
    </div>
</div>

</body>
</html>

