<h1>My Profile</h1>
<% if current_user.profile %>
<div class="myprofile">
			<ul>
					<li style="width:400px;">
					<% if  current_user.profile.photo_file_name==nil%>
							<%= image_tag "default.png", :width=>"100", :height=>"100" %>
					<% else %>					
							<%= image_tag @profile.photo.url(:thumb)%>
					<% end %>
					
					</li>
			<ul>
			<ul>
					<li>Name:</li>
					<li><%= current_user.profile.name %></li>
			<ul>
			<ul>
					<li>Email:</li>
					<li><%= current_user.email %></li>
			<ul>
			<ul>
					<li>Gender:</li>
					<li>
					<% if current_user.profile.gender=="true" %>
					Male
					<% else %>
					Female
					<% end %>
					</li>
			<ul>
			<ul>
					<li>DOB:</li>
					<li><%= current_user.profile.dob %></li>
			<ul>
			<ul>
					<li>City:</li>
					<li><%= current_user.profile.city %></li>
			<ul>
			<ul>
					<li>State:</li>
					<li><%= current_user.profile.state %></li>
			<ul>
			<ul>
					<li>Country:</li>
					<li><%= current_user.profile.country %></li>
			<ul>
			<ul>
					<li>Zip:</li>
					<li><%= current_user.profile.zip %></li>
			<ul>
			<ul>
					<li>Mobile:</li>
					<li><%= current_user.profile.mobile %></li>
			<ul>

<%= link_to 'Edit', "#{current_user.id}/edit" %>
<% else %>
<%= link_to image_tag("createyourprofilecap.png"), new_profile_path %>
</div>
<% end %>
